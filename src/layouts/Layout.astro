---
import Footer from '../components/Footer.astro';
import MenuScreen from '../components/MenuScreen.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;

let menuOpen = false;

---


<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="initial-scale=1, width=device-width" />
    <link rel="icon" href="/assets/favicon.ico">
    <link rel="stylesheet" type="text/css" href="/assets/styles/global.css" />
	<title>{title}</title>
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Mulish:wght@400;600;700;900&display=swap"
    />
  </head>
  <body>
  <MenuScreen />
	<slot />
  <Footer />
  </body>
</html>


<script is:inline>
  const closeBtn = document.querySelector('#closeBtn');
  const openMenuBtn = document.querySelector('#openMenuBtn');
  const menuItem = document.querySelector('.menu-item')
  const menuPane = document.querySelector('#menuPane');

  openMenuBtn.addEventListener('click', () => {
  menuPane.classList.add('active'); // Add 'active' class to trigger transition
});
closeBtn.addEventListener('click', () => {
  menuPane.classList.remove('active'); // Remove 'active' class to slide down
});
  menuItem.addEventListener('click', () => {
    menuPane.classList.remove('active');
  })
</script>